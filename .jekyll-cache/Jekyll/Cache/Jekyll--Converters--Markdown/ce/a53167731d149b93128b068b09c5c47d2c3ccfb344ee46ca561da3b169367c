<!-- Modal -->
<div class="modal fade" id="EELLOM3240" tabindex="-1" role="dialog" aria-labelledby=" Química Inorgânica Fundamental e Aplicada" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header alert-dark">
        <h5 class="modal-title">LOM3240</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
